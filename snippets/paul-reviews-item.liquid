{%- liquid
  unless grid_item_width
    assign grid_item_width = 'small--one-half medium-up--one-third'
  endunless

  unless background_position
    assign background_position = 'center center'
  endunless

  if block.settings.author != blank
    assign author_output = block.settings.author
  else
    assign author_output = 'Author'
  endif

  if block.settings.comment != blank
    assign comment_output = block.settings.comment
  else
    assign comment_output = 'Please set comment for this item'
  endif
-%}

<div class="grid__item {{ grid_item_width }}">
  <div class="paul-review-item">
    <div class="item-stars">
      {%- assign score = block.settings.score -%}
      {%- for block in (1..score) -%}
        <svg class="icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg"><path d="M908.1 353.1l-253.9-36.9L540.7 86.1c-3.1-6.3-8.2-11.4-14.5-14.5-15.8-7.8-35-1.3-42.9 14.5L369.8 316.2l-253.9 36.9c-7 1-13.4 4.3-18.3 9.3-12.3 12.7-12.1 32.9 0.6 45.3l183.7 179.1-43.4 252.9c-1.2 6.9-0.1 14.1 3.2 20.3 8.2 15.6 27.6 21.7 43.2 13.4L512 754l227.1 119.4c6.2 3.3 13.4 4.4 20.3 3.2 17.4-3 29.1-19.5 26.1-36.9l-43.4-252.9 183.7-179.1c5-4.9 8.3-11.3 9.3-18.3 2.7-17.5-9.5-33.7-27-36.3z"></path></svg>
      {%- endfor -%}
    </div>
    {%- if block.settings.product != blank -%}
      <h4>{{ block.settings.product.title }}</h4>
    {%- endif -%}
    <p class="text-secondly">{{ comment_output }}</p>
    {%- if block.settings.product != blank -%}
      <p class="item-image"><img src="{{ block.settings.product | image_url: width: 300 }}" alt="{{ block.settings.product.name }}"/></p>
    {%- endif -%}
    <h4>-- {{ author_output }}</h4>
  </div>
</div>
