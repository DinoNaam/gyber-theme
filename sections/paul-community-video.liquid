{% schema %}
  {
    "name": "Community Video",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured Videos"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Here is what our customers say about our products"
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      }
    ],
    "presets": [{
      "name": "Community Video",
      "category": "Video",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }],
    "blocks": [
      {
        "type": "item",
        "name": "Featured Video",
        "settings": [
          {
            "id": "video",
            "type": "video_url",
            "label": "Video URL",
            "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
            "accept": [
              "youtube",
              "vimeo"
            ]
          },
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          }
        ]
      }
    ]
  }
{% endschema %}
