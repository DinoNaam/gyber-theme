{% comment %} https://shopify.dev/themes/architecture/settings/input-settings {% endcomment %}

{% schema %}
  {
    "name": "FAQ Banner",
    "settings": [
      {
        "id": "image_background",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "GYBER SUPPORT CENTER"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Product information, assembly support, FAQS, user guides - everything in one place."
      },
      {
        "type": "checkbox",
        "id": "size",
        "label": "Smaller Size",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      }
    ],
    "presets": [{
      "name": "FAQ Banner",
      "category": "Text"
    }]
  }
{% endschema %}
