{% schema %}
  {
    "name": "Customed Textimonials",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Our Customers Say"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Here is what our customers say about our products"
      },
      {
        "id": "icon",
        "type": "textarea",
        "label": "Icon (SVG)",
        "info": "Needs SVG Format, paste the svg codes here."
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      }
    ],
    "presets": [{
      "name": "Customed Textimonials",
      "category": "Text",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "id": "author",
            "type": "text",
            "label": "Author"
          },
          {
            "id": "comment",
            "type": "text",
            "label": "Comment"
          }
        ]
      }
    ]
  }
{% endschema %}
