{% schema %}
  {
    "name": "Community Member",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Meet Our Ambassadors"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Here is what our customers say about our products"
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      }
    ],
    "presets": [{
      "name": "Community Member",
      "category": "Blog",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }],
    "blocks": [
      {
        "type": "item",
        "name": "Blog Article",
        "settings": [
          {
            "id": "article",
            "type": "article",
            "label": "Blog Article"
          }
        ]
      }
    ]
  }
{% endschema %}
