{% schema %}
  {
    "name": "General Banner",
    "settings": [
      {
        "id": "image_background",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "General Banner"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Product information, assembly support, FAQS, user guides - everything in one place."
      },
      {
        "type": "select",
        "id": "size",
        "label": "Size",
        "options": [
          {
            "value": "large",
            "label": "Large"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "small",
            "label": "Small"
          }
        ],
        "default": "medium"
      },
      {
        "type": "select",
        "id": "style",
        "label": "Style",
        "options": [
          {
            "value": "blur",
            "label": "Blur Background"
          },
          {
            "value": "simple",
            "label": "Simple Full Width"
          }
        ],
        "default": "simple"
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      }
    ],
    "presets": [{
      "name": "General Banner",
      "category": "Text"
    }]
  }
{% endschema %}
